{
  "name": "@bao/ui",
  "version": "0.1.0-alpha.0",
  "description": "Styled React components built on Base UI primitives",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "dev": "vite build --watch"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "base-ui",
    "tailwind"
  ],
  "author": "Bao To",
  "license": "MIT",
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.1",
    "@bao/core": "workspace:*",
    "@bao/tokens": "workspace:*",
    "clsx": "^2.1.1",
    "dompurify": "^3.0.8",
    "tailwind-variants": "^0.2.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "framer-motion": "^11.0.0"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "typescript": "^5.4.2",
    "vite": "^5.1.4"
  }
