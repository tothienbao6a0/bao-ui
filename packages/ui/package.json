{
  "name": "@bao-ui/react",
  "version": "1.1.2",
  "description": "Styled React components built on Base UI primitives",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build && cp -r dist-types/packages/ui/src/* dist/ && rm -rf dist-types",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "dev": "vite build --watch"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "base-ui",
    "tailwind"
  ],
  "author": "Bao To",
  "license": "MIT",
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.0.8",
    "tailwind-variants": "^2.0.0"
  },
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "framer-motion": "^11.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4",
    "typescript": "^5.4.2",
    "vite": "^7.0.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
