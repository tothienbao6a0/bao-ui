{
  "name": "bao-ui-monorepo",
  "version": "0.1.0",
  "description": "AI-native React component & logic system built on Base UI primitives",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "pnpm -r build",
    "build:registry": "tsx scripts/build-registry.ts",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint packages --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint packages --ext ts,tsx --fix",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit": "pnpm audit --prod",
    "chromatic": "chromatic --exit-zero-on-changes",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "tailwind",
    "base-ui",
    "ai-native",
    "monorepo"
  ],
  "author": "Bao To",
  "license": "MIT",
  "devDependencies": {
    "@base-ui-components/react": "1.0.0-beta.1",
    "@changesets/cli": "^2.26.0",
    "@eslint/js": "^9.32.0",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.19",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "chromatic": "^11.20.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "eslint": "^9.19.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^0.11.6",
    "framer-motion": "^11.0.6",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.0",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "snyk": "^1.1291.0",
    "storybook": "^8.4.7",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.0.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vitest": "^2.1.8",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --ignore-pattern '.storybook/**'",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1"
  }
}
